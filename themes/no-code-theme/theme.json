{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "black",
					"color": "#1e1e1e",
					"name": "Black"
				},
				{
					"slug": "white",
					"color": "#f0f0f0",
					"name": "White"
				},
				{
					"slug": "primary",
					"color": "#0073aa",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#A3B5B2",
					"name": "Secondary"
				},
				{
					"slug": "transparent",
					"color": "#00000000",
					"name": "transparent"
				},
				{
					"slug": "pink",
					"color": "#FFC0C1",
					"name": "pink"
				},
				{
					"slug": "red",
					"color": "#FF0000",
					"name": "Red"
				},
				{
					"slug": "yellow",
					"color": "#FFFF00",
					"name": "Yellow"
				}
			]
		},
		"layout": {
			"contentSize": "100vh",
			"wideSize": "100vw"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System (Roboto, Segoe UI, Ubuntu)",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				}
			]
		}
	},
		"styles": {
			"blocks": {
				"core/paragraph": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--transparent)",
						"text": "var(--wp--preset--color--black)"
					}
				},
				"core/heading": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"text": "var(--wp--preset--color--black)"
					}
				},
				"core/list-item": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--black)",
						"text": "var(--wp--preset--color--secondary)"
					}
				},
				"core/quote": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"text": "var(--wp--preset--color--white)",
						"background": "var(--wp--preset--color--secondary)"
					}
				},
				"core/code": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"text": "var(--wp--preset--color--yellow)",
						"background": "var(--wp--preset--color--primary)"
					}
				},
				"core/pullquote": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--red)",
						"text": "var(--wp--preset--color--black)"
					}
				},
				"core/classic": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--yellow)",
						"text": "var(--wp--preset--color--transparent)"
					}
				},
				"core/preformatted": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--blue)",
						"text": "var(--wp--preset--color--white)"
					}
				},
				"core/table": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--yellow)",
						"text": "var(--wp--preset--color--pink)"
					}
				},
				"core/verse": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--red)",
						"text": "var(--wp--preset--color--black)"
					}
				},
				"core/details": {
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system)"
					},
					"color": {
						"background": "var(--wp--preset--color--blue)",
						"text": "var(--wp--preset--color--red)"
					}
				}
			}
		},
		"templateParts": [
			{
				"name": "header",
				"title": "Header",
				"area": "header"
			}
		]
	}

